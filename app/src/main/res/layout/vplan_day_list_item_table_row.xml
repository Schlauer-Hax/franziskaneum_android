<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/vplan_school_class"
        android:layout_width="54dp"
        android:layout_height="match_parent"
        android:background="@drawable/vplan_table_border"
        android:padding="2dp"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/vplan_hour"
        android:layout_width="51dp"
        android:layout_height="match_parent"
        android:background="@drawable/vplan_table_border"
        android:padding="2dp"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/vplan_subject"
        android:layout_width="36dp"
        android:layout_height="match_parent"
        android:background="@drawable/vplan_table_border"
        android:padding="2dp"
        android:textColor="@android:color/black" />

    <de.franziskaneum.views.TeacherLinkTextView
        android:id="@+id/vplan_teacher"
        android:layout_width="48dp"
        android:layout_height="match_parent"
        android:background="@drawable/vplan_table_border"
        android:padding="2dp"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/vplan_room"
        android:layout_width="43dp"
        android:layout_height="match_parent"
        android:background="@drawable/vplan_table_border"
        android:padding="2dp"
        android:textColor="@android:color/black" />

    <de.franziskaneum.views.TeacherLinkTextView
        android:id="@+id/vplan_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/vplan_table_border"
        android:minWidth="50dp"
        android:padding="2dp"
        android:textColor="@android:color/black" />

</LinearLayout>