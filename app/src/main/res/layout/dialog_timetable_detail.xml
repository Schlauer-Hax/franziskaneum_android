<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_timetable_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <TextView
        android:id="@+id/dialog_timetable_detail_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/ColorAccent"
        android:padding="12dp"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/dialog_timetable_detail_subject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_timetable_detail_title"
        android:layout_margin="8dp"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/dialog_timetable_detail_room"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_timetable_detail_subject"
        android:layout_margin="8dp"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/dialog_timetable_detail_teacher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_timetable_detail_room"
        android:layout_margin="8dp"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/dialog_timetable_detail_teacher"
        android:background="#fff"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/dialog_timetable_detail_edit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?selectableItemBackground"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:src="@drawable/ic_edit" />

        <ImageButton
            android:id="@+id/dialog_timetable_detail_delete"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?selectableItemBackground"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:src="@drawable/ic_delete" />
    </LinearLayout>

</RelativeLayout>