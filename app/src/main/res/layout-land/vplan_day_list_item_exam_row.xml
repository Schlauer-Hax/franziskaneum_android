<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/vplan_exam_school_class"
        android:layout_height="match_parent"
        android:background="@drawable/vplan_table_border"
        android:padding="2dp"
        android:text="@string/exam_school_class"
        android:textColor="@android:color/black"
        android:layout_width="65dp" />

    <TextView
        android:id="@+id/vplan_exam_course"
        android:layout_width="35dp"
        android:layout_height="match_parent"
        android:background="@drawable/vplan_table_border"
        android:padding="2dp"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/vplan_exam_hour"
        android:layout_width="51dp"
        android:layout_height="match_parent"
        android:background="@drawable/vplan_table_border"
        android:padding="2dp"
        android:textColor="@android:color/black" />

    <de.franziskaneum.views.TeacherLinkTextView
        android:id="@+id/vplan_exam_teacher"
        android:layout_height="match_parent"
        android:background="@drawable/vplan_table_border"
        android:padding="2dp"
        android:text="@string/course_leader"
        android:textColor="@android:color/black"
        android:layout_width="66dp" />

    <TextView
        android:id="@+id/vplan_exam_start_time"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:background="@drawable/vplan_table_border"
        android:padding="2dp"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/vplan_exam_duration"
        android:layout_width="43dp"
        android:layout_height="match_parent"
        android:background="@drawable/vplan_table_border"
        android:padding="2dp"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/vplan_exam_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/vplan_table_border"
        android:padding="2dp"
        android:textColor="@android:color/black" />

</LinearLayout>